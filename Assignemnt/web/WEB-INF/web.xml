<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>Filters.LoginFilter</filter-class>
        <init-param>
            <param-name>LoginFile</param-name>
            <param-value>Login.txt</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>controller.home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Class</servlet-name>
        <servlet-class>Class</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Mark</servlet-name>
        <servlet-class>Mark</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Classinfo</servlet-name>
        <servlet-class>controller.Classinfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>memberinclass</servlet-name>
        <servlet-class>controller.memberinclass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Mark2</servlet-name>
        <servlet-class>controller.Mark2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editinfor</servlet-name>
        <servlet-class>controller.editinfor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Class</servlet-name>
        <url-pattern>/Class</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Mark</servlet-name>
        <url-pattern>/Mark</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Classinfo</servlet-name>
        <url-pattern>/Classinfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>memberinclass</servlet-name>
        <url-pattern>/memberinclass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Mark2</servlet-name>
        <url-pattern>/Mark2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editinfor</servlet-name>
        <url-pattern>/editinfor</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
